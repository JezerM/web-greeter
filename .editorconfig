# Top-most EditorConfig file
root = true

[*]
charset                  = utf-8
continuation_indent_size = 4
curly_bracket_next_line  = false
end_of_line              = lf
indent_brace_style       = 1TBS
indent_size              = 4
indent_style             = tab
insert_final_newline     = true
max_line_length          = 99
tab_width                = 4
trim_trailing_whitespace = true

[*.py]
indent_style = space

[*.yml]
indent_style = space
